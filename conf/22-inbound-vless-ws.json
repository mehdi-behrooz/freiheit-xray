{
    "inbounds": [
        {
            "tag": "ws",
            "listen": "0.0.0.0",
            "port": 1082,
            "protocol": "vless",
            "settings": {
                "clients": [
                    {
                        "id": "${USER_ID_DIRECT}",
                        "level": 0,
                        "email": "direct@example.com"
                    },
                    {
                        "id": "${USER_ID_PROXY}",
                        "level": 0,
                        "email": "proxy@example.com"
                    }
                ],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "ws",
                "security": "none",
                "wsSettings": {
                    "path": "${WEBSOCKET_PATH}"
                }
            }
        }
    ]
}
